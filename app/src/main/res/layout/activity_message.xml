<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <HorizontalScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TableLayout android:id="@+id/tbl_layout"
                android:layout_width="wrap_content" android:layout_height="fill_parent" />
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>